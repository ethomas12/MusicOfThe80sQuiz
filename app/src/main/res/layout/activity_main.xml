<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aesthetic_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/aesthetic"
                    android:src="@drawable/aesthetic_wallpaper_dragonzebra" />

                <TextView
                    style="@style/QuestionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/aesthetic_background"
                    android:layout_alignEnd="@id/aesthetic_background"
                    android:layout_alignLeft="@id/aesthetic_background"
                    android:layout_alignRight="@id/aesthetic_background"
                    android:layout_alignStart="@id/aesthetic_background"
                    android:layout_alignTop="@id/aesthetic_background"
                    android:layout_margin="1dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="@string/app_title"
                    android:textSize="36sp" />

            </RelativeLayout>


            <!--Quiz questions-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <!--************************* Question 1 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q1_img"
                        android:src="@drawable/bauhaus" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_1" />

                    <TextView
                        style="@style/PromptText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="@string/checkbox_hint" />

                    <CheckBox
                        android:id="@+id/checkbox_1_a"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_1_a" />

                    <CheckBox
                        android:id="@+id/checkbox_1_b"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_1_b" />

                    <CheckBox
                        android:id="@+id/checkbox_1_c"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_1_c" />

                    <CheckBox
                        android:id="@+id/checkbox_1_d"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_1_d" />

                    <CheckBox
                        android:id="@+id/checkbox_1_e"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_1_e" />

                    <TextView
                        android:id="@+id/answer_1"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 2 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q2_img"
                        android:src="@drawable/scratching" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_2" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/true_radio_button"
                            style="@style/CheckboxText"
                            android:text="@string/true_choice"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/false_radio_button"
                            style="@style/CheckboxText"
                            android:text="@string/false_choice"
                            android:textAppearance="?android:textAppearanceMedium" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/answer_2"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>


                <!--************************* Question 3 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q3_img"
                        android:src="@drawable/vintage_1950s" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_3" />

                    <TextView
                        style="@style/PromptText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="@string/checkbox_hint" />

                    <CheckBox
                        android:id="@+id/checkbox_3_a"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_3_a" />

                    <CheckBox
                        android:id="@+id/checkbox_3_b"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_3_b" />

                    <CheckBox
                        android:id="@+id/checkbox_3_c"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_3_c" />

                    <CheckBox
                        android:id="@+id/checkbox_3_d"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_3_d" />

                    <CheckBox
                        android:id="@+id/checkbox_3_e"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_3_e" />


                    <TextView
                        android:id="@+id/answer_3"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 4 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:contentDescription="@string/q4_img"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q4_img"
                        android:src="@drawable/carribean" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_4" />

                    <TextView
                        style="@style/ChoiceText"
                        android:padding="32dp"
                        android:text="@string/your_answer_4" />

                    <EditText
                        android:id="@+id/quiz_4_editable"
                        style="@style/TypedAnswers"
                        android:hint="@string/typed_hint" />

                    <TextView
                        android:id="@+id/answer_4"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <!--************************* Question 5 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:contentDescription="@string/q5_img"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q5_img"
                        android:src="@drawable/cowboy_hats" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_5" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/adults_babies_radio_button"
                            style="@style/CheckboxText"
                            android:text="@string/ab_choice"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/babies_adults_radio_button"
                            style="@style/CheckboxText"
                            android:text="@string/ba_choice"
                            android:textAppearance="?android:textAppearanceMedium" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/answer_5"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 6 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q6_img"
                        android:src="@drawable/records" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_6" />

                    <TextView
                        style="@style/PromptText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_hint" />

                    <CheckBox
                        android:id="@+id/checkbox_6_a"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_6_a"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/checkbox_6_b"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_6_b"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/checkbox_6_c"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_6_c"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/checkbox_6_d"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_6_d"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <CheckBox
                        android:id="@+id/checkbox_6_e"
                        style="@style/CheckboxText"
                        android:text="@string/quiz_6_e"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <TextView
                        android:id="@+id/answer_6"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 7 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q7_img"
                        android:src="@drawable/men_working" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_7" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_button_7a"
                            style="@style/CheckboxText"
                            android:text="@string/true_choice"
                            android:textAppearance="?android:textAppearanceMedium" />


                        <RadioButton
                            android:id="@+id/radio_button_7b"
                            style="@style/CheckboxText"
                            android:text="@string/false_choice"
                            android:textAppearance="?android:textAppearanceMedium" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/answer_7"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 8 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q8_img"
                        android:src="@drawable/sad_boy" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_8" />

                    <TextView
                        style="@style/ChoiceText"
                        android:padding="32dp"
                        android:text="@string/your_answer_8" />

                    <EditText
                        android:id="@+id/quiz_8_editable"
                        style="@style/TypedAnswers"
                        android:hint="@string/typed_hint" />


                    <TextView
                        android:id="@+id/answer_8"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 9 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q9_img"
                        android:src="@drawable/herbie_hancock" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_9" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/checkbox_9_a"
                            style="@style/CheckboxText"
                            android:text="@string/quiz_9_a"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/checkbox_9_b"
                            style="@style/CheckboxText"
                            android:text="@string/quiz_9_b"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/checkbox_9_c"
                            style="@style/CheckboxText"
                            android:text="@string/quiz_9_c"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/checkbox_9_d"
                            style="@style/CheckboxText"
                            android:text="@string/quiz_9_d"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <RadioButton
                            android:id="@+id/checkbox_9_e"
                            style="@style/CheckboxText"
                            android:text="@string/quiz_9_e"
                            android:textAppearance="?android:textAppearanceMedium" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/answer_9"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <!--************************* Question 10 ************************ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/q10_img"
                        android:src="@drawable/sugar_cube" />

                    <TextView
                        style="@style/QuestionText"
                        android:text="@string/quiz_10" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_button_10a"
                            style="@style/CheckboxText"
                            android:text="@string/true_choice"
                            android:textAppearance="?android:textAppearanceMedium" />


                        <RadioButton
                            android:id="@+id/radio_button_10b"
                            style="@style/CheckboxText"
                            android:text="@string/false_choice"
                            android:textAppearance="?android:textAppearanceMedium" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/answer_10"
                        style="@style/AnswerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>


                <!--End of Quiz Questions-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/submit_score_button"
                        style="@style/CheckButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:gravity="center"
                        android:onClick="submitScore"
                        android:padding="8dp"
                        android:text="@string/btn_text_1"
                        android:textColor="@color/questionText" />

                    <Button
                        style="@style/CheckButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:onClick="showAnswers"
                        android:padding="8dp"
                        android:text="@string/showAnswers"
                        android:textColor="@color/questionText" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/final_score_message"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="32sp" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>